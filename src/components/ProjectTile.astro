---
const { title, description, icon, link } = Astro.props;

const fullImageLink = `/project-icons/${icon}`;
---
<a href={link} class="project-tile flex flex-col items-center text-center p-4 bg-gray-800 rounded-lg shadow-lg hover:bg-gray-700 transition duration-300">
    {icon && <img src={fullImageLink} alt={title} class="mb-4 w-16 h-16 object-contain" />}
    <h2 class="font-bold text-xl mb-2">{title}</h2>
    <p class="text-gray-400">{description}</p>
</a>