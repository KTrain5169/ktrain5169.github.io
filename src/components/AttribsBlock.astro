---
const { name, description, url, iconName, iconType = 'lucide' } = Astro.props;
import Icon from './Icon.astro';
---

<div class="p-4 bg-gray-800 rounded-lg shadow-lg text-white">
    <div class="flex items-center gap-2 mb-2">
        <Icon icon={iconName} iconType={iconType} size={24} />
        <a href={url} class="text-white no-underline font-bold">{name}</a>
    </div>
    <p class="text-sm text-gray-400">{description}</p>
</div>