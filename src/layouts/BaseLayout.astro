---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import MetaTag from "../components/MetaTag.astro";
const { title, description, tags } = Astro.props;
const meta = {
    title: `${title} | KTrain5369`,
    description: `${description}`,
    tags: `${tags}`
}
---
<!DOCTYPE html>
<html lang="en" class="h-fit lg:h-full">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <MetaTag {...meta} />
    <title>{title} | KTrain5369</title>
    <meta name="description" content={description}>
    <link rel="icon" href="/favicon.png" type="image/png">
</head>
<body class="h-full m-0 flex flex-col bg-gray-900 text-white w-full">
    <Header />
    <main class="flex-1 flex flex-col items-center justify-center p-4 sm:p-8 lg:p-12">
        <slot />
    </main>
    <Footer />
</body>
</html>