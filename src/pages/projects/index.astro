---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ProjectTile from '../../components/ProjectTile.astro';
---
<BaseLayout title="Projects" description="KTrain5369's projects list" tags="list">
    <h1 class="text-center text-3xl font-bold my-5">My Projects</h1>
    <div class="flex flex-col lg:flex-row flex-wrap justify-center items-center min-h-full gap-2 lg:gap-5 p-5 flex-grow">
        <div class="bg-gray-700 rounded-lg shadow-lg p-5 mb-2 lg:mb-5">
            <ProjectTile title="NotEssential" description="A website about why the Essential mod is bad, and alternatives to it." icon="/projects/project1.svg" link="/projects/notessential" />
        </div>
        <div class="bg-gray-700 rounded-lg shadow-lg p-5 mb-2 lg:mb-5">
            <ProjectTile title="unpacker" description="A Python program to unzip Modrinth modpacks and place them in a folder." link="/projects/unpacker" />
        </div>
        <!-- Add more projects as needed -->
    </div>
</BaseLayout>