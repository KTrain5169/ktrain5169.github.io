---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404 - Page Not Found" description="The page you are looking for does not exist.">
    <main class="flex-1 flex flex-col items-center justify-center text-center p-4">
        <h1 class="text-4xl font-bold mb-4">404</h1>
        <p class="text-lg mb-4">The page you are looking for does not exist.</p>
        <a href="/" class="text-blue-400 hover:text-blue-500">Go back to the homepage</a>
    </main>
</BaseLayout>